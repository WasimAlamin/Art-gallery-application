@model LaborationRep.Models.Artist

@{
    ViewData["Title"] = "Details";
}

<h1>Detaljer</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Förnamn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Efternamn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Uppdatera</a> |
    <a asp-action="Index">Tillbaka till konstnärslista</a>
</div>
